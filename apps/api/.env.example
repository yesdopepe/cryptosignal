# Database Configuration
# For SQLite (development):
DATABASE_URL=sqlite+aiosqlite:///./crypto_signals.db

# For PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/crypto_signals

# Redis Configuration
REDIS_URL=
# Telegram API Configuration (get from https://my.telegram.org)
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_PHONE=

# Application Settings
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=true
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Cache Settings
CACHE_ENABLED=true

# Data Generation
SYNTHETIC_DATA_COUNT=100000

# ============================================
# Notification Settings (Phase 2)
# ============================================

# Resend Email Service (https://resend.com)
# 1. Sign up at https://resend.com
# 2. Go to API Keys â†’ Create API Key
# 3. Add a domain and verify DNS records
#    (or use onboarding@resend.dev for testing)
# 4. Set your API key and from email below
RESEND_API_KEY=
NOTIFICATION_FROM_EMAIL=signals@yourdomain.com

# Enable/disable all notifications
NOTIFICATION_ENABLED=true

# Rate limiting: cooldown period between notifications
# for the same user on the same channel (in seconds)
NOTIFICATION_RATE_LIMIT_SECONDS=300
