{
  "name": "crypto-signal-aggregator",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "start": "turbo start",
    "dev:api": "cd apps/api && uvicorn app.main:app --reload --port 8000",
    "dev:web": "cd apps/web && pnpm dev",
    "clean": "turbo clean && rimraf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "rimraf": "^5.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18"
  }
}
